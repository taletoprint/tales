# Environment Configuration for TaleToPrint
# Copy this file to .env.local for development

# Node Environment
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/taletoprint

# Branding
BUSINESS_NAME="Tale To Print"
SITE_URL=https://taletoprint.com

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_PRICE_A3=price_...

# AI Services
STABILITY_API_KEY=...              # For SDXL preview generation
AZURE_OPENAI_ENDPOINT=https://... # For DALL-E 3 HD generation
AZURE_OPENAI_KEY=...
OPENAI_API_KEY=...                # For GPT-4 prompt refinement

# Print-on-Demand (Prodigi)
PRODIGI_API_KEY=...
PRODIGI_DEFAULT_SKU=GLOBAL-FAP-16x20  # Set after paper testing

# AWS Storage
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_S3_BUCKET=taletoprint-assets
AWS_REGION=eu-west-2

# Redis Cache
REDIS_URL=redis://localhost:6379

# Email Service (Postmark)
POSTMARK_API_KEY=...
FROM_EMAIL=hello@taletoprint.com

# Monitoring & Analytics
LOGTAIL_TOKEN=...
SENTRY_DSN=...
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=taletoprint.com

# Rate Limiting Configuration
MAX_FREE_PREVIEWS_ANONYMOUS=3
MAX_FREE_PREVIEWS_REGISTERED=6
MAX_FREE_PREVIEWS_CUSTOMER=20

# Feature Flags
ENABLE_HD_GENERATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
SUPPORTED_COUNTRIES=GB
DEFAULT_CURRENCY=GBP